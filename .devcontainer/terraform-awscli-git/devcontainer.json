{
  "name": "Terraform-AWSCLI-Git Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "mounts": [
    "source=${localEnv:HOME}/.ssh/ec2sshkey,target=/root/.ssh/id_rsa,type=bind,consistency=cached"
  ],
  "postCreateCommand": [
    "git config --global user.name 'Diego Zarpelon'",
    "git config --global user.email zarpelon@icloud.com'"
  ],
  "extensions": [
    "hashicorp.terraform",
    "github.vscode-pull-request-github",
    "amazonwebservices.aws-toolkit-vscode"
  ],
  "remoteUser": "root"
}
